# NutriPilot AI Backend Environment Variables
# Copy this file to .env and fill in your values

# Google Gemini API Key (required for AI analysis)
# Get yours at: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key_here

# Comet/Opik API Key (for observability - optional for MVP)
# Get yours at: https://www.comet.com/
OPIK_API_KEY=your_opik_api_key_here

# USDA FoodData Central API Key (for real nutrition data - optional for MVP)
# Get yours at: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your_usda_api_key_here

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Opik Settings
OPIK_PROJECT_NAME=nutripilot

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
